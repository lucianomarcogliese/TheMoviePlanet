<% for (let i = 0; i< resenas.length; i++) { %>

  <div class="listadoDeResenas"> 

  <ul class= "resenitas">  
          <li class="reseñas" style="list-style:none">     <%=resenas[i].rating %> ★  </li> 
         <li class="reseñas" style="list-style: none;">      <%=resenas[i].usuario.nombre %>    </li> 
          <li class="reseñas" style="list-style: none;"> <%=resenas[i].resenas %> </li>
          <li class="reseñas" style="list-style: none;"> Ultima vez actualizada: <%=resenas[i].fecha_de_actualizacion %> </li>
                
      </ul>
    </div>
      <% }  %>





